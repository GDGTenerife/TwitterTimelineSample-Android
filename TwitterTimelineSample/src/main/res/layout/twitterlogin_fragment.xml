<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/com_dhsoftware_android_twitterTimelineSample_twitterLoginFragment_progressBar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true">
    </ProgressBar>

    <TextView
        android:id="@+id/com_dhsoftware_android_twitterTimelineSample_twitterLoginFragment_descriptionTextView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/com_dhsoftware_android_twitterTimelineSample_twitterLoginFragment_description"
        android:padding="@dimen/view_padding_margin"
        android:visibility="invisible"
        android:autoLink="web">
    </TextView>

    <EditText
        android:id="@+id/com_dhsoftware_android_twitterTimelineSample_twitterLoginFragment_pinEditText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/view_padding_margin"
        android:visibility="invisible">
    </EditText>

    <Button
        android:id="@+id/com_dhsoftware_android_twitterTimelineSample_twitterLoginFragment_okButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:text="@string/com_dhsoftware_android_twitterTimelineSample_ok"
        android:visibility="invisible">
    </Button>

</LinearLayout>